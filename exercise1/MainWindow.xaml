<Window x:Class="exercise1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:exercise1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button x:Name="StartThread" Content="Запустить поток" 
                    Margin="10" Click="StartThreadClick"/>
            <Button x:Name="StartPriorityThread" Content="Запустить поток с приоритетом" 
                    Margin="10" Click="StartPriorityThreadClick"/>
            <Button x:Name="UpdateUI" Content="обновить UI без Dispatcher" 
                    Margin="10" Click="UpdateUIClick"/>
            <ProgressBar x:Name="ProgressBar" Height="15" Background="Blue" Margin="10"/>
            <TextBlock Text="Текст для обновления" Name="UpdateText" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
